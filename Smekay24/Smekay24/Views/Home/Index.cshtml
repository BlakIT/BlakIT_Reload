@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Site.css" rel="stylesheet" />

    <style type="text/css">
        .categoryBlock {
            border: 1px solid gray;
            border-radius: 20px;
            min-height: 200px;
            margin-top: 30px;
        }

            .categoryBlock input {
                font-size: 12px;
            }

        .cat {
            height: 80px;
            background: url("/images/autoCat.jpg") no-repeat;
            background-size: auto 80px;
        }
    </style>

    <script type="text/javascript">
        function getCatAdverts(catrext)
        {
            window.location.href = '/Advert/GetAdvertsFromCategory?catText=' + catrext;//  GetAdvertsFromCategory           
        }

        $('#searchBut').click(function(){
            window.location.href = '/Advert/GetAdvertsBySearch?search=' + $('#search').val();
        });

    </script>

</head>
<body>
    <div class="container-fluid">

        <div class="row">
            <div class="col-xs-6">
                <ul class="topUl">
                    <li>
                        <a href="/"><img src="/images/smekay.jpg" width="220px" /></a>
                    </li>
                    <li>
                         <button type="button" onclick="location.href='@Url.Action("AddAdvert", "Advert")'" style="margin-top:40px;" class="btn btn-info" id="submitForm" name="submitForm">Подать обьявления</button>                       
                    </li>
                </ul>
            </div>
            <div class="col-xs-6">
                <ul class="topUl">
                    <li>
                        @{
                            if (!@Smekay24.WebAPI.UserSession.IsUserLogged)
                            {
                            <a>@Html.ActionLink("Вход", "Login", "Login", null, null)</a>
                            }
                            else
                            {
                            <a>@Html.ActionLink(Smekay24.WebAPI.UserSession.CurrentUser.Email, "PersonalCabinetAdverts", "PersonalCabinet", null, null)</a>
                            }
                        }
                    </li>
                    <li>
                        @{
                            if (@Smekay24.WebAPI.UserSession.IsUserLogged)
                            {
                            <a>@Html.ActionLink("Выход", "Logout", "Login", null, null)</a>
                            }
                            else
                            {
                            <a>@Html.ActionLink("Регистрация", "Registration", "Registration", null, null)</a>
                            }                           
                        }
                    </li>
                    <li>
                        <a>@Html.ActionLink("Правила", "Rules", "Rules", null, null)</a>
                    </li>
                    <li>
                        <a>@Html.ActionLink("Контакты", "Contacts", "Contacts", null, null)</a>
                    </li>


                    @{if (Smekay24.WebAPI.UserSession.CurrentUser.Role == (int)Smekay24.Models.Constants.UserRole.Admin)
                      {
                        <li>
                            <a>@Html.ActionLink("Управление сайтом", "Admin", "Admin", null, null)</a>
                        </li>                    
                      }
                    }


                </ul>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-xs-offset-4">
                <h1 style="text-align: center;"><b>smekay.center</b></h1>
                <h5 style="text-align: center;">Проходите по любому адресу</h5>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-5 col-xs-offset-1" style="border: 1px solid black; border-radius: 15px; text-align: center;">
                <div>
                    <h2>Смекай24.рф</h2>
                    <h3>Здесь Вы можете продать любой Б\У товар</h3>
                    <h3>Здесь Вы можете его и купить</h3>
                    <h3>ВСЕ Б\У ТОВАРЫ ОТ А до Я</h3>
                </div>
            </div>
            <div class="col-xs-4" style="border: 1px solid black; border-radius: 15px; text-align: center; margin-left: 30px;">
                <h2>Smekay24.ru</h2>
                <h3>Smekay.net</h3>
                <h3>Знакомства в вашем городе</h3>
                <h3>И ПО ВСЕЙ РОССИИ</h3>
            </div>
        </div>

        <div class="row" style="margin-top:10px; margin-bottom:10px;">
            <div class="col-xs-3 col-xs-offset-1">
                <button type="button" onclick="location.href='@Url.Action("AddAdvert", "Advert")'"  class="btn btn-info" id="submitForm" name="submitForm">Подать обьявления</button>                       
                    
            </div>

            <div class="col-xs-2 ">
                <p>Всего: <a href="#">@ViewData["allAsvertCount"]</a> объявлений</p>
            </div>
        </div>

        <div class="row">
            <!-- Список категорий -->
            <div class="col-xs-11 col-xs-offset-1">
                @{
                    foreach (SelectListItem cat in (List<SelectListItem>)ViewData["category"])
                    {
                        @*<div style="background-image:url('images/minimal_icons_6.jpg'); background-position-x:20px; width:40px; height:40px; "  ></div>*@
                        <a href="#" style="border-right:1px solid black; margin-left:10px; padding-right:10px;" onclick="getCatAdverts('@cat.Text')"  >@cat.Text </a>                     
                    }
                }
            </div>
        </div>

        <div class="row" style="margin-top: 10px;">
            <!-- Поиск -->
            <div class="col-xs-8 col-xs-offset-2">
                <b>Поиск</b>
                <input style="width: 40%;" type="text" name="search" id="search" />
                <b style="margin-left: 40px; margin-right: 40px;">в</b>
                @Html.DropDownList("Category", ViewData["category"] as List<SelectListItem>)
                <input style="margin-left: 40px;" type="submit" name="searBut" id="searchBut" value="Поиск" />
            </div>
        </div>

        <div class="row" style="margin-top: 20px;">
            <!-- Выбор региона -->
            <div class="col-xs-10 col-xs-offset-1">
                <fieldset>
                    <legend style="margin-bottom: 0; border: 0;">Выберите регион</legend>

                    <div class="row" style="border: 1px solid silver; padding: 10px;">
                        @{
                            int cols = 0;
                            string text = "";
                            foreach (Smekay24.City city in (List<Smekay24.City>)ViewData["cities"])
                            {
                            <div class="col-xs-2" style="margin-top: 10px;">
                                <a href="#">@city.Name</a>
                            </div>

                                
                            }
                        }
                    </div>

                </fieldset>
            </div>
        </div>

        <div class="row" style="margin-top: 30px;">
            <!-- Категории и последние обьявления -->

            <div class="col-xs-6 col-xs-offset-1">

                @{
                    List<Smekay24.Models.CategoryCover> list = (List<Smekay24.Models.CategoryCover>)ViewData["categoryAdverts"];
                    int count = list.Count;
                    for (int i = 0; i < count; i += 3)
                    {
                    <div class="row">
                        <div class="col-xs-3 categoryBlock">
                            <h4>@list[i].Name</h4>
                            <div class="cat @list[i].Name"></div>
                            <a href="#">@list[i].CountAdvert объявлений</a>
                            <p>@list[i].Desc</p>
                            <button type="button" onclick="location.href='@Url.Action("AddAdvert", "Advert")'" style="  padding-left: 2px;width: 133px;margin-bottom: 10px;" class="btn btn-danger"  name="submitForm">Подать обьявление</button>                       
                    </div>

                        @if (i + 1 < count)
                        {
                            <div class="col-xs-3 col-xs-offset-1  categoryBlock">
                                <h4>@list[i + 1].Name</h4>
                                <div class="cat @list[i + 1].Name"></div>
                                <a href="#">@list[i + 1].CountAdvert объявлений</a>
                                <p>@list[i + 1].Desc</p>
                                <button type="button" onclick="location.href='@Url.Action("AddAdvert", "Advert")'" style="  padding-left: 2px;width: 133px;margin-bottom: 10px;" class="btn btn-danger"  name="submitForm">Подать обьявление</button>                       
                    
                            </div>
                        }

                        @if (i + 2 < count)
                        {
                            <div class="col-xs-3 col-xs-offset-1 categoryBlock">
                                <h4>@list[i + 2].Name</h4>
                                <div class="cat @list[i + 2].Name"></div>
                                <a href="#">@list[i + 2].CountAdvert объявлений</a>
                                <p>@list[i + 2].Desc</p>

                                <button type="button" onclick="location.href='@Url.Action("AddAdvert", "Advert")'" style="  padding-left: 2px;width: 133px;margin-bottom: 10px;" class="btn btn-danger"  name="submitForm">Подать обьявление</button>                       
                                    
                            </div>
                        }
                    </div>
                    }
                }


            </div>


            <div class="col-xs-4" style="border: 1px solid silver; border-radius: 20px; top: 30px;">
                <div class="col-xs-10 col-xs-offset-2">
                    <h3 style="margin: 0;">Последние обьявления</h3>
                </div>


                @{
                    foreach (Smekay24.Advert adv in (List<Smekay24.Advert>)ViewData["adverts"])
                    {
                    <div class="row" style="border-bottom: 1px solid silver;">
                        <div class="col-xs-6">
                            <a href="@Url.Action("GetAdvertByID", "Advert", new { id = adv.ACode })">
                                <img src="~/images/mob.jpg" style="width: 90%;" />
                            </a>
                        </div>

                        <div class="col-xs-6">
                            <p><b>@adv.Title</b></p>
                            <i>@adv.Price</i>
                            <p style="color:blue;">@adv.Date</p>
                        </div>
                    </div> 
                    }
                }

            </div>
        </div>

        <div class="row">
            <div class="col-xs-6 col-xs-offset-6">
                <ul class="topUl">
                    <li>
                        <a>Контакты</a>
                    </li>
                    <li>
                        <a>Пользовательское соглашение</a>
                    </li>
                    <li>
                        <a>Политика конфиденциальности</a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
</body>
</html>
