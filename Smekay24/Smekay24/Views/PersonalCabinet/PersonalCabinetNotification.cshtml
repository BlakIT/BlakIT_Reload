@model List<Smekay24.Notification>
@{
    ViewBag.Title = "PersonalCabinet";
    Layout = "~/Views/PersonalCabinet/PCabLayout.cshtml";
}


<div style="padding-left: 260px;">
    @{
        foreach (Smekay24.Notification s in Model)
        {
        <div class="row">
            @if (s.Content.Substring(0, 1) == "+")
            {
                <div class="col-xs-11 col-xs-offset-1">
                    <h4 style="color: green;">@s.Content</h4>
                </div>
                <div class="row">
                    <div class="col-xs-1 col-xs-offset-10">
                        <a  href="@Url.Action("DenyNotification", "PersonalCabinet", new { idNot = s.NCode })" >Удалить</a>
                    </div>
                </div>
            }
            else
            {
                <div class="col-xs-6 col-xs-offset-1">
                    <h4 style="color: green;">@s.Content</h4>
                </div>
            }

            @if (s.Content.Substring(0, 1) != "+")
            {
                <div class="col-xs-2">
                    <button type="submit"  class="btn btn-info btn-block" onclick="location.href='@Url.Action("ApplyNotification", "PersonalCabinet", new { idNot = s.NCode })'" id="approveBtn" name="submitForm">Принять</button>
                </div>
                <div class="col-xs-2">
                    <button type="submit"  class="btn btn-danger btn-block" onclick="location.href='@Url.Action("DenyNotification", "PersonalCabinet", new { idNot = s.NCode })'" id="denyBtn" name="submitForm">Отклонить</button>
                </div>
                
            }
        </div>
        <hr />
        }
    }
</div>

